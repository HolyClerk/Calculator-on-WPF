<Window x:Class="Calculator_on_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_on_WPF"
        mc:Ignorable="d"
        Title="Калькулятор " Height="400" Width="500" WindowStyle="ToolWindow">
    
    <!-- Главный контейнер -->
    <Grid x:Name="MainContainer" Background="Gray">
        <!-- Разметка строк -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Разметка колонн -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Разметка элементов по атрибутам Grid.Row и Grid.Column -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Хуй"/>
    </Grid>
</Window>
